<Page x:Class="AdventurePRO.Pages.AdventureResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdventurePRO.Pages"
      xmlns:views="clr-namespace:AdventurePRO.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AdventureResultsPage">

    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <ListBox Name="AdventureResultsList" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <views:Adventure/>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Yellow"/>
            </ListBox.Resources>
        </ListBox>
    </ScrollViewer>
</Page>

<Window x:Class="AdventurePRO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventurePRO"
        xmlns:pages="clr-namespace:AdventurePRO.Pages"
        xmlns:views="clr-namespace:AdventurePRO.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" MinWidth="400">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <StackPanel>
                <views:AdventureOptionsPanel x:Name="Options"/>
                <Button HorizontalAlignment="Right" Click="Search_Click">Search</Button>
                <Frame Name="MainContent"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
